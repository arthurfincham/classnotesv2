 <div id="mySidebar" class="sidebar">
   <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
   <ul class="nav-top-links">
     <li class="nav-item">
       <%= link_to new_note_path, method: :get, class: "nav-link align-middle px-0" do %>
       <span class="ms-1 d-none d-sm-inline">New Note</span>
       <% end %>
     </li>

     <li class="nav-item">
       <%= link_to root_path, class: "nav-link align-middle px-0" do %>
       <span class="ms-1 d-none d-sm-inline">All Notes</span>
       <% end %>
     </li>

     <li>
       <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
         <span class="ms-1 d-none d-sm-inline">Tags</span> </a>
       <ul class="collapse nav flex-column ms-1" id="submenu1" data-bs-parent="#menu">
         <% tag_cloud @notes.tag_counts.order("tags.name"), %w[m] do |tag| %>
         <li class="w-100">
           <span
             class="d-none d-sm-inline"><%= link_to "#{tag.name.parameterize(separator: '_')}", tag_path(tag.name), class: "nav-link px-0"%></span>
         </li>
         <% end %>
       </ul>
     </li>


     <li>
       <a href="#submenu2" data-bs-toggle="collapse" class="nav-link px-0 align-middle ">
         <span class="ms-1 d-none d-sm-inline">Instructors</span></a>
       <ul class="collapse nav flex-column ms-1" id="submenu2" data-bs-parent="#menu">
         <% tag_cloud @notes.instructor_counts.order("tags.name"), %w[m] do |tag| %>
         <li class="w-100">
           <span
             class="d-none d-sm-inline"><%= link_to "#{tag.name.parameterize(separator: '_')}", instructor_path(tag.name), class: "nav-link px-0"%></span>
         </li>
         <% end %>
       </ul>
     </li>

     <li>
       <a href="#submenu3" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
         <span class="ms-1 d-none d-sm-inline">Classes</span> </a>
       <ul class="collapse nav flex-column ms-1" id="submenu3" data-bs-parent="#menu">
         <% tag_cloud @notes.note_title_counts.order("tags.name"), %w[m] do |tag| %>
         <li class="w-100">
           <span
             class="d-none d-sm-inline"><%= link_to "#{tag.name.parameterize(separator: '_')}", note_title_path(tag.name), class: "nav-link px-0"%></span>
         </li>
         <% end %>
       </ul>
     </li>

   </ul>
   <ul class="nav-bottom-links">
     <li class="nav-item">
       <%= link_to edit_user_registration_path, method: :get, class: "nav-link align-middle px-0" do %>
       <span class="ms-1 d-none d-sm-inline">Profile</span>
       <% end %>
     </li>

     <li class="nav-item">
       <%= link_to destroy_user_session_path, method: :delete, class: "nav-link align-middle px-0" do %>
       <span class="ms-1 d-none d-sm-inline">Sign Out</span>
       <% end %>
     </li>

   </ul>

 </div>